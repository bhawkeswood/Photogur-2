<p id="links"><%= link_to "Back to Pictures", pictures_url %> | <%= link_to "Edit", edit_picture_path(@picture) %> | <%= link_to "Delete", @picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %></p>
<br>
<br>
<br>
<p class="title_artist"><%= @picture[:title] %> by <%= @picture[:artist] %></p>
<div id="pix"><%= image_tag @picture.url %></div>
 
<div id="all_comments">
<h2>Comments</h2>
<% @picture.comments.each do |comment| %>
<div class="comments">  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p> </div>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@picture, @picture.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>