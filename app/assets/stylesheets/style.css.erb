body {
	background-color: #0F0F0F;
	color: white;
	font-family: tahoma;
	font-variant: small-caps;
	width: 1200px;
	max-height: 1000px;
	background-size: 1200px 1200px;
	background-image: url(<%= asset_path 'black-grunge.jpg'%>);

}

h1 {
	text-align: right;
	margin-right: 450px
}

#image_count {
	text-align: left;
	margin-left: 100px;
}

a:link {
	color: #EB175E;
	-webkit-transition:color 1s ease-in;
}

a:visited {
	color: #751C3A;
	}

a:hover {
	color: white;
}

.title_artist {
	font-size: 20px;
	font-variant: small-caps;
	text-align: left;
	margin-left: 150px;

}

#pix img{
	border: 1px white solid;
	margin-left: 150px;
	max-width: 900px;
	max-height:auto;
}

#links {
	margin-left: 150px;
}

#all_comments {
	margin-left: 150px;
}

.crop{
	opacity: 1.0;
	filter:alpha(opacity=100);
	float:left;
	margin:.5em 10px .5em 0;
	overflow:hidden; 
	border:1px solid white;
	}
 
.crop:hover {
	opacity:.75;
	filter:alpha(opacity=75);
}
	 
.crop img{
	/*margin:-75px -50px -75px -50px;*/
	max-width: 150px;
	max-height: 100px;
	}

.comments {
	border: 1px white solid;
}

.new_photo {
	margin-left: 150px;
}